# 生产环境配置
NODE_ENV=production
PORT=3000
HOSTNAME=127.0.0.1

# 数据库配置 (如果需要)
# DATABASE_URL=your_database_url

# 文件上传配置
MAX_FILE_SIZE=20971520
UPLOAD_PATH=/root/lab-equipment-website/public/uploads

# 安全配置
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=https://www.qple.net

# 日志配置
LOG_LEVEL=info
LOG_FILE=/var/log/lab-equipment-website/app.log

# 性能配置
BODY_PARSER_LIMIT=20mb
COMPRESSION_LEVEL=6

# 缓存配置
CACHE_TTL=3600
STATIC_CACHE_TTL=2592000
